<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTest.Page1">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Entry x:Name="Entree" Keyboard="Numeric"/>
            <StackLayout Orientation="Horizontal">
                <Label Text="Ville : "/>
                <Label x:Name="LabelCity" Text="{Binding City}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Temperature : "/>
                <Label  Text="{Binding temperature}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Vent : "/>
                <Label  Text="{Binding wind}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Humidite : "/>
                <Label  Text="{Binding humididy}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Visibilite : "/>
                <Label  Text="{Binding visibility}"/>
            </StackLayout>
            
            <Button x:Name="GetWeatherBtn" Text="Meteo" Clicked="GetWeatherButton_Clicker" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>